<div class="container form-style">
    <h2>
 Ask A Question
    </h2>
    <center>
    <form action="/Home/new_quest" method="post">
        <input type="text" name="title" class="form-control w-50" placeholder="Enter Your Question Title"/>
        <br />
        <input type="text" name="content" class="form-control w-50" placeholder="Enter Your Question Name"/>
        <br />
        <input type="hidden" name="from"value="@User.Identity.Name" />
        <button type="submit" class="btn btn-primary w-50">ask</button>
    </form>
    </center>
</div>
