@{
    Layout = "_layout5";
    var date = DateTime.Now.ToString();
    var total = ViewBag.data1 + ViewBag.data2 + ViewBag.data3;
}
<div class="container-fluid" id="print">
    <center>
    <h2 class="title">@ViewBag.title Report</h2>
    </center>
    <hr class="class-1"/>
   <center>
        <h4>@date</h4>
   </center>
   <br />
   <h2>First Graph</h2>
        <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
    <br>
    <br>
    
       
        <h2>Second Graph</h2>

        <canvas id="myChart2" style="width:100%;max-width:600px"></canvas>
     
    <br />
    <br />
    </div>

@section Scripts {
    <script>

        const xValues = ["Men", "Women", "Kids"];
        const yValues = [@ViewBag.data1, @ViewBag.data2, @ViewBag.data3];
        const barColors = ["red", "green", "blue"];

        new Chart("myChart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: "Product Sales this Month"
                }
            }
        });

        const xValues2 = ["Men", "Women", "Kid's"];
        const yValues2 = [@ViewBag.data1, @ViewBag.data2, @ViewBag.data3];
        const barColors2 = [
            "#b91d47",
            "#00aba9",
            "#2b5797",
            "#e8c3b9",
            "#1e7145"
        ];

        new Chart("myChart2", {
            type: "pie",
            data: {
                labels: xValues2,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Inventory Data Analysis"
                }
            }
        });



       

    </script>
    
}

