@model IEnumerable<clothshop2.Models.Product>
@{
    ViewData["Title"] = "All Categoires";
    Layout = "_layout2";

    var cats = (List<Category>)ViewData["MyData"];
    int i = 1;
}
<h1>All Products</h1>
<hr>

<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price),
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imgName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imgName)
                </td>
                @foreach (var c in cats)
                {
                    @if (c.Id == item.Catid)
                    {
                        <td>@c.Name</td>
                    }
                        }
                <td>
                    <a class="btn btn-warning" asp-action="edit_Product" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete_products" asp-route-id="@item.Id">Delete</a>

                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

