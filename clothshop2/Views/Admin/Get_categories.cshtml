@model IEnumerable<clothshop2.Models.Category>

@{
    ViewData["Title"] = "All Categoires";
    Layout = "_layout2";
    int i = 1;
}
<h1>All Categories</h1>
<hr>

<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th>Update</th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    <a class="btn btn-warning" asp-action="edit_category" asp-route-id="@item.Id">Edit</a>

                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete_categories" asp-route-id="@item.Id">X</a>

                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

