@{
    Layout = "_layout2";
    string sMonth = DateTime.Now.ToString();


    
}

<div class="text-center">
    <h1 class="display-4 ">Welcome Admin !</h1>
    <a class="btn btn-primary" asp-action="operations">user Log-File</a>

    <hr />
    <div class="row">
        <div class="col-md-6">
            <canvas id="myChart" style="width:100%;max-width:600px"></canvas>

            </div>
            <div class="col-md-6">
            <canvas id="myChart2" style="width:100%;max-width:600px"></canvas>

                </div>
        </div>

    <div class="row row-style">
        <div class="col-md-4">
            <div class="card" style="width: 19rem;">
                <div class="card-body">
                    <h5 class="card-title">Product Sales </h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">@sMonth</h6>
                    <hr />
                    <p class="card-text">Men's Wear : @ViewBag.menCount</p>
                    <p class="card-text">Women's Wear : @ViewBag.womenCount</p>
                    <p class="card-text">Kid's Wear : @ViewBag.kidsCount</p>

                  
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" style="width: 19rem;">
                <div class="card-body">
                    <h5 class="card-title">Users Analysis</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">@sMonth</h6>
                    <hr />
                    <p class="card-text">All Users : @ViewBag.usersCount</p>
                    <p class="card-text">Sub-Admins : @ViewBag.adminCount</p>

                    <p class="card-text">Subscribers : @ViewBag.subscriberCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" style="width: 19rem;">
                <div class="card-body">
                    <h5 class="card-title">Current Inventory</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">@sMonth</h6>
                    <hr />
                    <p class="card-text">Men's Wear : @ViewBag.menCount</p>
                    <p class="card-text">Women's Wear : @ViewBag.womenCount</p>

                    <p class="card-text">Kid's Wear : @ViewBag.kidsCount</p>
            </div>
        </div>
    </div>
    


</div>
@section Scripts {
    <script>
          
        const xValues = ["Men", "Women", "Kids"];
            const yValues = [@ViewBag.menCount, @ViewBag.womenCount, @ViewBag.kidsCount];
        const barColors = ["red", "green", "blue"];

        new Chart("myChart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: "Product Sales this Month"
                }
            }
        });


    

        const xValues2 = ["Men", "Women", "Kid's"];
            const yValues2 = [@ViewBag.menCount, @ViewBag.womenCount, @ViewBag.kidsCount];
        const barColors2 = [
            "#b91d47",
            "#00aba9",
            "#2b5797",
            "#e8c3b9",
            "#1e7145"
        ];

        new Chart("myChart2", {
            type: "pie",
            data: {
                labels: xValues2,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Inventory Data Analysis"
                }
            }
        });

              
        </script>
        <script>
             Function print() {
    var e = document.getElementById("left-menu");
    e.style.display = "none";
                window.print();
            }
            </script>
}
<script src="http://maps.google.com/maps/api/js?sensor=true"></script>
        </div>
    </div>
<script type="text/javascript" src="https://demo.dashboardpack.com/architectui-html-free/assets/scripts/main.js"></script>
</html>

</div>
